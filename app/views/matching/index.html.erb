<div class="container matchingPage">
  <nav class="nav">
    <ul>
      <li class="appIcon"><%= link_to image_tag("cat_icon.png"), action: "index" %></li>
      <li class="messageIcon"><%= link_to(content_tag(:i, "", class: 'fas fa-2x fa-comments'), matching_index_path) %></li>
    </ul>
  </nav>
  <div class="row">
    <div class="col-md-12 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="container">
            <div class="mt-5">
              <div class="matchingNum"><%= @match_users.size %>匹とマッチングしています</div>
              <h2 class="pageTitle">マッチングしたネコ一覧</h2>
              <div class="matchingList">
                <% @match_users.each do |user| %>
                  <div class="matchingPerson">
                    <div class="matchingPerson_img"><%= image_tag user.img_name.url(:thumb) %></div>
                    <div class="matchingPerson_name"><%= user.name %></div>
                    <%= form_tag :chat_index, method: :post do %>
                      <input name="user_id" type="hidden" value="<%= user.id %>" />
                      <%= submit_tag 'チャットを開く', class: "chatForm_btn" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
